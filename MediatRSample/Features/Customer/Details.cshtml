@using MediatRSample.Features
@using MediatRSample.Features.Customer
@model Details.Model

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Customer</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <label asp-for="LastName" class="control-label"></label>
        </dt>
        <dd>
            @Html.DisplayName(Model.LastName)
        </dd>


        <dt>
            <label asp-for="FirstName" class="control-label"></label>
        </dt>        
        <dd>
            @Html.DisplayName(Model.FirstName)
        </dd>


        <dt>
            <label asp-for="Email" class="control-label"></label>
        </dt>
        <dd>
            @Model.Email
    </dd>
   
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", nameof(CustomerController.Edit), new Edit.Query { Id = Model.ID }) |
    @Html.ActionLink("Back to List", nameof(CustomerController.Index))
</p>
